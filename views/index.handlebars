<div class="container bg">
	<div class="row">
	    <div class="center col-sm-12">
			<img src="assets/img/burger.jpg">
	        <h1>Eat-Da-Burger Menu</h1>
	        <p></p>
	    </div>
  	</div>

	<div class="row">
	    <div class="col-sm-6">

			<br>
			<h3>Patties Ready To Enjoy!</h3>
			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}
			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="main-btn" type="submit">Enjoy It!</button>
			        </form>
			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>
	    </div>

	    <div class="col-sm-6">
			<h2>Patties That Have Been Enjoyed!</h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}
			      </li>
			    {{/if}}
			  {{/each}}
	    </div>
  	</div>
	
	<div class="row">
	    <div class="center col-sm-12">

			<h2>Add A Patty!</h2>

			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <p>Enter a patty you want to enjoy</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  <button class="main-btn" type="submit">Ask your Patty Now</button>
			</form>
	    </div>
  	</div>
</div>